            <Label Text="$34.15 (+4.2%)" TextColor="ForestGreen" FontSize="Caption" Margin="16,0,27,0" Grid.Column="1" Grid.Row="2" 
                   HorizontalOptions="EndAndExpand" VerticalOptions="End" />
            
            

            <Grid Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" Margin="19,0,19,0" >
